{
  "source": "./src",
  "destination": "./esdoc",
  "plugins": [
    {
      "name": "esdoc-importpath-plugin",
      "option": {
        "replaces": [
          {"from": "^src", "to": "lib"}
        ]
      }
    },
    {
      "name": "esdoc-ecmascript-proposal-plugin", 
      "option": {"all": true}
    },
    {
      "name": "esdoc-standard-plugin",
      "options": {
        "typeInference": {"enable": false},
        "test": {
          "source": "./test"
        }
      }
    }
  ]
}
