{
  "$schema": "./node_modules/intern/schemas/config.json",
  "bail": true,
  "coverage": ["src/**/*.ts", "!src/index.browser.ts", "!src/index.fx.ts"],
  "environments": "node",
  "node": {
    "suites": "./test/**/*_test.ts",
    "plugins": ["test/setup-globals.ts", "test/server.ts"],
    "tsconfig": "./test/tsconfig.json"
  },
  "browser": {
    "suites": "dist/test-suite.js"
  },
  "configs": {
    "firefox": {
      "bail": true,
      "environments": [
        {
          "browserName": "firefox",
          "moz:firefoxOptions": {
            "args": ["-headless"],
            "profile": ""
          },
          "fixSessionCapabilities": "no-detect"
        }
      ]
    },
    "chrome": {
      "bail": true,
      "environments": [
        {
          "browserName": "chrome",
          "goog:chromeOptions": {
            "args": ["disk-cache-dir=nul", "headless", "disable-gpu"]
          },
          "fixSessionCapabilities": "no-detect"
        }
      ]
    }
  }
}
